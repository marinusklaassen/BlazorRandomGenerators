@page "/travestygenerator"

<h3>Travesty Generator</h3>
<hr />

<div class="form-group">
    <textarea rows="20" class="col-12" @bind="Text" />
</div>
<div class="form-group">
    <label>Amount of garbling</label>
    <select class="form-control  col-sm-12 col-md-6" @bind="@SelectedLevelOfGarbling">
        @foreach (var item in LevelOfGarblingItems)
        {
            <option value="@item.Id">@item.Id - @item.Name</option>
        }
    </select>
</div>
<div class="form-group">
    <label>Length output text (optional)</label>
    <input class="form-control  col-sm-12 col-md-6" type="number" @bind="MaxLength" />
</div>
<button class="btn btn-primary col-sm-12 col-md-6" @onclick="ProcessText"><span class="oi oi-bolt"></span>Process Text</button>
@if (Error != null)
{
    <div class="alert alert-warning">@Error</div>
}